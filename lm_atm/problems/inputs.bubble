# simple inputs files for the unsplit CTU hydro scheme

[driver]
max_steps = 2000
tmax = 1.0
cfl = 0.8


[LM-atmosphere]


[io]
basename = lm_bubble_128_
n_out = 1


[mesh]
nx = 128
ny = 128
xmax = 1.0
ymax = 1.0

xlboundary = periodic
xrboundary = periodic

ylboundary = reflect
yrboundary = outflow


[bubble]
x_pert = 0.5
y_pert = 0.5
r_pert = 0.05



